<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.3.0" method="upgrade" client="site">
	<name>MOD_DOCIMPORT_SEARCH</name>
    <author>Nicholas K. Dionysopoulos</author>
    <copyright>Copyright (C) 2011-2017 Nicholas K. Dionysopoulos / AkeebaBackup.com</copyright>
    <license>GNU GPLv3 - http://www.gnu.org/licenses/gpl.html</license>
    <authorEmail>nicholas@akeebabackup.com</authorEmail>
    <authorUrl>www.akeebabackup.com</authorUrl>
    <creationDate>November 2016</creationDate>
    <version>5.0</version>
	<description>MOD_DOCIMPORT_SEARCH_DESCRIPTION</description>
	<files>
		<file module="mod_docimport_search">mod_docimport_search.php</file>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_docimport_search.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_docimport_search.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
                <field name="header" type="text" default="" label="MOD_DOCIMPORT_SEARCH_HEADER_LBL" description="MOD_DOCIMPORT_SEARCH_HEADER_DESC" />
                <field name="troubleshooter" type="textarea" rows="10" default="" label="MOD_DOCIMPORT_SEARCH_TROUBLESHOOTER_LBL" description="MOD_DOCIMPORT_SEARCH_TROUBLESHOOTER_DESC" class="input-xxlarge" />
			</fieldset>

			<fieldset name="advanced">
				<field
						name="moduleclass_sfx"
						type="textarea"
						rows="3"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
						name="cache"
						type="list"
						default="1"
						label="COM_MODULES_FIELD_CACHING_LABEL"
						description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
						name="cache_time"
						type="text"
						default="900"
						label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
						description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>

		</fields>
	</config>
</extension>