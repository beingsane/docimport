<?xml version="1.0" encoding="UTF-8"?>
<form validate="true">
    <fieldset name="basic"
              label="COM_DOCIMPORT_CATEGORY_BASIC_TITLE"
              class="span5"
    >
        <field name="title"
               type="Text"
               label="COM_DOCIMPORT_CATEGORIES_FIELD_TITLE"
        />

        <field name="slug"
               type="Text"
               label="COM_DOCIMPORT_CATEGORIES_FIELD_SLUG"
        />

        <field name="image"
               type="Media"
               label="COM_DOCIMPORT_CATEGORIES_FIELD_IMAGE"
        />

        <field name="process_plugins"
               type="Boolean"
               label="COM_DOCIMPORT_CATEGORIES_FIELD_PROCESS_PLUGINS"
               default="0"
       />

        <field name="enabled"
               type="Published" label="COM_DOCIMPORT_COMMON_FIELD_ENABLED"
               default="1"
        />

        <field name="language"
               type="Language"
               label="COM_DOCIMPORT_COMMON_FIELD_LANGUAGE"
               none="*"
               default="*"
        />

        <field name="access"
               type="AccessLevel"
               label="COM_DOCIMPORT_COMMON_FIELD_ACCESS"
               default="1"
        />

    </fieldset>

    <fieldset name="desc"
              label="COM_DOCIMPORT_CATEGORY_DESCRIPTION_TITLE"
              class="span7"
    >
        <field name="description"
               type="Editor"
               label_placement="none"
               buttons="1"
        />

    </fieldset>
</form>
